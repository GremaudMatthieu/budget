---
import { getLocaleFromUrl, getAlternateUrl, t } from '../i18n/utils';

const locale = getLocaleFromUrl(Astro.url);
const alternateLocale = locale === 'fr' ? 'en' : 'fr';
const alternateUrl = getAlternateUrl(Astro.url, alternateLocale);
---

<!-- Header -->
<header class="gradient-bg text-white relative">
  <div class="container mx-auto px-6 py-8">
    <nav class="flex justify-between items-center" role="navigation" aria-label="Navigation principale">
      <div class="flex items-center">
        <i class="fas fa-wallet text-3xl mr-3" aria-hidden="true"></i>
        <h1 class="text-2xl font-bold">GoGoBudgeto</h1>
      </div>
      <div class="flex items-center space-x-4">
        <a href="https://gogobudgeto.expo.app/signin" class="hidden md:block px-4 py-2 rounded-lg bg-white bg-opacity-20 hover:bg-opacity-30 transition-all duration-300 focus:outline-none focus:ring-2 focus:ring-white focus:ring-opacity-50">
          {t('header.login', locale)}
        </a>
        <div class="relative">
          <a href={alternateUrl} class="flex items-center space-x-2 hover:bg-white hover:bg-opacity-10 px-3 py-2 rounded transition-all duration-300" aria-label={locale === 'fr' ? 'Switch to English' : 'Passer au français'}>
            <span class="hidden md:inline">{t('header.lang', locale)}</span>
            <i class="fas fa-globe text-sm" aria-hidden="true"></i>
          </a>
        </div>
      </div>
    </nav>
    
    <main class="mt-16 md:mt-24 pb-32 flex flex-col md:flex-row items-center min-h-0">
      <section class="w-full md:w-1/2 mb-12 md:mb-0 md:pr-8">
        <h1 class="text-4xl md:text-5xl font-bold mb-4 leading-tight" id="gogobudgeto-app-budget">{t('header.title', locale)}</h1>
        <p class="text-xl opacity-90 mb-8 leading-relaxed">{t('header.subtitle', locale)} 
          <a href="#plans-budgetaires-gogobudgeto" class="underline hover:text-blue-200 transition-colors">
            {locale === 'fr' ? 'Découvrez nos plans budgétaires' : 'Discover our budget plans'}
          </a> et 
          <a href="#enveloppes-economies-gogobudgeto" class="underline hover:text-blue-200 transition-colors">
            {locale === 'fr' ? 'le système d\'enveloppes' : 'the envelope system'}
          </a>.
        </p>
        <div class="flex justify-center sm:justify-start relative z-10">
          <a href="https://gogobudgeto.expo.app/signin" class="px-8 py-4 bg-white text-indigo-600 font-semibold rounded-lg hover:bg-gray-100 transition-all duration-300 shadow-lg focus:outline-none focus:ring-2 focus:ring-white focus:ring-offset-2 focus:ring-offset-indigo-600 inline-block text-center transform hover:scale-105">
            {t('header.cta.primary', locale)}
          </a>
        </div>
      </section>
      <aside class="w-full md:w-1/2 flex justify-center animate-float md:pl-8">
        <img 
          src="https://illustrations.popsy.co/amber/digital-nomad.svg" 
          alt={locale === 'fr' ? 'Illustration représentant la gestion financière avec GoGoBudgeto' : 'Financial management illustration with GoGoBudgeto'} 
          class="w-full max-w-md"
          width="400"
          height="400"
          loading="eager"
        >
      </aside>
    </main>
  </div>
  
</header>

