<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                                      https://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="App\Domain\Envelope\Entity\Envelope" repository-class="App\Infra\Http\Rest\Envelope\Repository\EnvelopeCommandRepository">
        <id name="id" type="integer" column="id">
            <generator strategy="AUTO"/>
        </id>
        <field name="createdAt" type="datetime_immutable" column="created_at"/>
        <field name="updatedAt" type="datetime" column="updated_at"/>
        <field name="currentBudget" type="string" column="current_budget"/>
        <field name="targetBudget" type="string" column="target_budget"/>
        <field name="title" type="string" column="title" length="255"/>

        <many-to-one field="parent" target-entity="App\Domain\Envelope\Entity\Envelope" inversed-by="children">
            <join-column name="parent_id" referenced-column-name="id" nullable="true"/>
        </many-to-one>

        <one-to-many field="children" target-entity="App\Domain\Envelope\Entity\Envelope" mapped-by="parent">
            <cascade>
                <cascade-all/>
            </cascade>
        </one-to-many>

        <many-to-one field="user" target-entity="App\Domain\User\Entity\User" inversed-by="envelopes">
            <join-column name="user_id" referenced-column-name="id" nullable="false"/>
        </many-to-one>
    </entity>
</doctrine-mapping>